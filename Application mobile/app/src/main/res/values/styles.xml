<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/color4</item>
        <item name="colorPrimary">@color/color4</item>
        <item name="colorPrimaryDark">@color/color5</item>
        <item name="colorAccent">@color/color1</item>
        <item name="android:windowActionBar">true</item>
        <item name="actionBarTheme">@color/color4</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorOnSecondary">@color/color1</item>
    </style>

    <style name="NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/color1</item>
        <item name="colorPrimary">@color/color1</item>
        <item name="colorPrimaryDark">@color/color2</item>
        <item name="colorAccent">@color/color3</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="welcomeFont">
        <item name="android:fontFamily">@font/just_another_hand</item>
    </style>

    <style name="baseFont">
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="RoundedButton" parent="">
        <item name="shapeAppearanceOverlay">@style/RoundedCorner</item>
    </style>

    <style name="RoundedCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15%</item>
    </style>

</resources>

